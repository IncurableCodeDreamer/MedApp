<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
    android:padding="5sp">

    <TextView
        android:text="Wprowadź swoje dane:"
        android:id="@+id/txt_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_data"
        android:layout_alignStart="@+id/txt_data"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="5sp"
        android:text="Imię:" />

    <EditText
        android:hint="Imię"
        android:id="@+id/start_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_name"
        android:layout_below="@+id/txt_data"
        android:inputType="text"
        android:textSize="15sp"
        android:layout_margin="5sp"/>

    <TextView
        android:text="Nazwisko:"
        android:id="@+id/txt_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_dialog_name"
        android:paddingTop="5sp"
        android:layout_margin="5sp"/>

    <EditText
        android:hint="Nazwisko"
        android:id="@+id/start_dialog_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/txt_surname"
        android:layout_below="@id/start_dialog_name"/>

    <TextView
        android:text="Email:"
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_dialog_surname"
        android:paddingTop="5sp"
        android:layout_margin="5sp"/>

    <EditText
        android:hint="Email"
        android:id="@+id/start_dialog_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/txt_email"
        android:inputType="text"
        android:layout_below="@id/start_dialog_surname"/>

    <TextView
        android:id="@+id/txt_birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_email"
        android:layout_alignStart="@+id/txt_data"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="5sp"
        android:text="Data urodzin:" />

    <TextView
        android:id="@+id/start_dialog_bithdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_dialog_email"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/txt_birthdate"
        android:hint="Wybierz datę"
        android:clickable="true"
        android:textSize="15sp" />

    <Button
        android:id="@+id/start_dialog_ok_btn"
        android:layout_below="@id/start_dialog_bithdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="OK" />

</RelativeLayout>